# CS Gauntlet Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DATABASE_URL=sqlite:///cs_gauntlet.db
HOST=0.0.0.0
PORT=5001

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# AI Grading Configuration
AI_PROVIDER=ollama
OPENAI_API_KEY=your-openai-api-key-if-using-openai

# Ollama Configuration (recommended for AI grading)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=codellama:7b

# Socket.IO Configuration
SOCKET_URL=http://localhost:5001

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://localhost:5173,http://127.0.0.1:5173

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Docker Configuration
DOCKER_TIMEOUT=10
DOCKER_MEMORY_LIMIT=256m
DOCKER_IMAGE=python:3.9-slim

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cs_gauntlet.log
